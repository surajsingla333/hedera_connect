{
  "manifest_version": 2,
  "name": "Saral wallet",
  "description": "Browser Extension Wallet for Hedera Hashgraph",
  "version": "0.0.1",
  "background": {
    "scripts": [
      "event.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Saral Wallet",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "notifications",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "css": [],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "api.js"
  ]
}